NAME=mysql
ACTIONS=run,migrate
ORDER=2

CONTAINER_NAME=mysql-test
CONTAINER_SRC=mariadb
# bitnami/mysql
# mysql/mysql-server
# mysql

DB_NAME=test-db
DB_USER=root
DB_PASSWORD=pwd
DB_PORT=17436

CONTAINER_PORTS=17436:3306
CONTAINER_ENV_MYSQL_ROOT_PASSWORD=pwd
CONTAINER_ENV_MYSQL_USER=user
CONTAINER_ENV_MYSQL_PASSWORD=pwd
CONTAINER_ENV_MYSQL_DATABASE=test-db
CONTAINER_ENV_ALLOW_EMPTY_PASSWORD=yes

MIGRATE_COMMAND=--path=/migrations/ --database="mysql://root:pwd@tcp(mysql-test:3306)/test-db" up
MIGRATE_PATH=migrations

CONTAINER_PATCH=50-server.cnf:/etc/mysql/mariadb.conf.d/
